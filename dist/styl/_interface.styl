@import '_vars.styl'

// ========== ========== V A R I A B L E S ========== ==========
$mwidth = 300px
// ========== ========== ========== ========== ==========

.hamburger
	display none
	width 30px
	height 30px
	cursor pointer
	span
		display block
		width 100%
		height 4px
		background $light-color
		margin-bottom 3px
		&:last-child
			margin-bottom 0
			
.btn__up
	display none
	border-radius 50%
	width 40px
	height 40px
	position fixed
	right 30px
	bottom 30px
	background $accent-color
	z-index 10
	text-align center
	transition all .23s ease-in-out
	box-shadow 0px 0px 13px 0px rgba($dark-color, 0.21)
	&:after
		content ''
		display inline-block
		position absolute
		top 15px
		left 10px
		width 20px
		height 20px
		transform rotate(-45deg)
		border-top 1px solid $dark-color
		border-right 1px solid $dark-color
		transition all .23s ease-in-out
	&:hover
		background  $dark-color
		transform scale(1.1)
		box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
		&:after
			border-top 1px solid $accent-color
			border-right 1px solid $accent-color