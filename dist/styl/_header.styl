@import '_vars.styl'

.header
	&__wrapper
		background url('../images/top.png') no-repeat
		background-position center top 
		background-size cover
		position relative
		min-height 375px
		text-align content
		padding-bottom 80px

	&__logo
		text-align center
		padding 5px 0
		
	&__descr
		color #0098ef
		font-weight bold
		font-size 14px
		text-transform uppercase
		text-align center
		p
			display inline-block
		strong
			float left
		.phones
			float right
			text-align right
			display inline-block
			margin-left 5px
			a
				color inherit
				&:hover
					text-decoration underline
					
		
	&__units
		padding 0 35px
		display flex
		justify-content space-between
		align-items flex-end
		flex-wrap wrap
		margin-top -40px
		&--item
			display block
	
			text-align center
	
			color $light-color
			font-size 14px
			img
				max-width 216px
			&:hover
				opacity .7
.logo
	display inline-block
	img
		max-width 155px
		
.nav
	position absolute
	left 0
	bottom 0
	width 100%
	&__list
		display block
		&--item
			float left
			width 16.6666%
			&--hidden
				display none
		&--link
			display block
			background rgba($dark-color, .4)
			padding 19px 23px 
			text-align center
			color $light-color
			font-size 14px
			border 1px solid #6E785D
			border-bottom none
			&:hover
				color #1082ce
				border-color transparent
				background #d3eef5
				background -moz-linear-gradient(top, #d3eef5 0%, #fdfeff 100%)
				background -webkit-linear-gradient(top, #d3eef5 0%,#fdfeff 100%)
				background linear-gradient(to bottom, #d3eef5 0%,#fdfeff 100%)
			&.current
				border-color transparent
				color #1082ce
				background #d3eef5
				background -moz-linear-gradient(top, #d3eef5 0%, #fdfeff 100%)
				background -webkit-linear-gradient(top, #d3eef5 0%,#fdfeff 100%)
				background linear-gradient(to bottom, #d3eef5 0%,#fdfeff 100%)
		&--submenu
			display block
			width 100%
			li
				display block
				width 100%
				list-style disc inside
			a
				display block
				background rgba($dark-color, .8)
				padding 19px 23px 
				text-align center
				color $light-color
				font-size 14px
				&:hover
					color #1082ce
					border-color transparent
					background #d3eef5
					background -moz-linear-gradient(top, #d3eef5 0%, #fdfeff 100%)
					background -webkit-linear-gradient(top, #d3eef5 0%,#fdfeff 100%)
					background linear-gradient(to bottom, #d3eef5 0%,#fdfeff 100%)
				&.current
					border-color transparent
					color #1082ce
					background #d3eef5
					background -moz-linear-gradient(top, #d3eef5 0%, #fdfeff 100%)
					background -webkit-linear-gradient(top, #d3eef5 0%,#fdfeff 100%)
					background linear-gradient(to bottom, #d3eef5 0%,#fdfeff 100%)
				span
					position relative
					display inline-block
					padding-left 20px
					&:before
						content ''
						position absolute
						top 50%
						left -5px
						transform translateY(-50%)
						display inline-block
						background url('../images/arrow-ic.svg') center no-repeat
						width 30px
						height 12px
			&--hidden
				display none